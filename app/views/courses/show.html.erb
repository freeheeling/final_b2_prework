<h2> <%= @course.name %>: Enrolled Students and Grades</h2>

<% @course.order_grades.each_with_index do |course_student, index| %>
  <section id='student-<%= course_student.student.id %>'>
    <p>Student: <%= course_student.student.name %></p>
    <p>Grade: <%= course_student.grade %></p>
    <p> <%= button_to 'Unenroll' %></p>
  </section><br>
<% end %>
